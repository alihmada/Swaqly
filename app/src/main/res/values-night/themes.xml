<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Swaqly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_pantone</item>
        <item name="colorPrimaryDark">@color/flame</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/jet</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/smoky_black</item>
        <item name="colorSecondaryVariant">@color/spanish_gray</item>
        <item name="colorOnSecondary">@color/silver_chalice</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorSecondary</item>
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="hintTextColor">@color/cadet</item>
    </style>

    <style name="login_create_buttons">
        <item name="fontFamily">@font/metropolis_semi_bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="login_edit_text">
        <item name="marginHorizontal">4dp</item>
        <item name="paddingStart">34dp</item>
    </style>

    <style name="input_text">
        <item name="boxBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_size</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_size</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_size</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_size</item>
    </style>

    <style name="text_field">
        <item name="paddingStart">@dimen/horizontal_padding</item>
        <item name="paddingEnd">@dimen/horizontal_padding</item>
        <item name="android:paddingTop">@dimen/vertical_padding</item>
        <item name="android:paddingBottom">@dimen/vertical_padding</item>
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="android:cursorVisible">true</item>
    </style>

</resources>